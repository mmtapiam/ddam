<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="160dp" android:background="@drawable/bg_drawer_header">

    <ImageView android:id="@+id/imagenPerfil"
        android:layout_width="75dp" android:layout_height="75dp"
        android:src="@drawable/imagen_perfil" android:layout_gravity="center_horizontal"
        android:layout_marginVertical="10dp"/>

    <TextView android:id="@+id/textoNombre"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" android:text="Usuario (default)"
        android:textColor="@color/colorWhite" android:textStyle="bold"/>

    <TextView android:id="@+id/textoEmail"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" android:text="usuario@email.com"
        android:textColor="@color/colorWhite"/>

</LinearLayout>